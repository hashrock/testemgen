{
    "schema": {
        "type": "object",
        "properties": {
            "framework": {
                "title": "フレームワーク",
                "type": "string",
                "enum": ["karma", "testem"]
            },
            "src_files": {
                "title": "テスト対象ファイル",
                "type": "array",
                "items": {
                    "title": "globで指定（test/**/*.js など）",
                    "type": "string",
                    "required": false
                }
            }
        },
        "required": ["name"]
    },
    "form": [
        "framework",
        {
            "key": "src_files",
            "add": "New",
            "style": {
                "add": "btn-success"
            },
            "items": [
                "src_files[]"
            ]
        },
        {
            "type": "submit",
            "style": "btn-info",
            "title": "OK"
        }
    ]
}
